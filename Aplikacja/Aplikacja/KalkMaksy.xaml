<Window x:Class="Aplikacja.KalkMaksy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KalkMaksy" Height="250" Width="300" FontSize="14">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="opisLabel" Text="{Binding}" TextWrapping="WrapWithOverflow"  Grid.Row="0" Grid.ColumnSpan="2" />
        <Label Content="Ciężar obciążenia[kg]:" Grid.Row="2" />
        <Label Content="Ilość powtórzeń:" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="ciezarTextbox" KeyDown="ciezarTextbox_KeyDown"  />
        <ComboBox Grid.Column="1" ItemsSource="{Binding}" Grid.Row="1" x:Name="powtorzeniaCombo" />
        <Button Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Content="Oblicz" x:Name="obliczButton" Click="obliczButton_Click" />
        <Label Content="Wynik:" Grid.Row="4"/>
        <TextBlock TextWrapping="WrapWithOverflow" Text="0 kg" Grid.Row="4" Grid.Column="1" x:Name="wynikLabel" />
    </Grid>
</Window>
