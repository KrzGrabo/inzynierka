<Window x:Class="Aplikacja.KalkMaksy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KalkMaksy" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="opisLabel" Content="{Binding}"  Grid.Row="0" Grid.ColumnSpan="2" />
        <Label Content="ciężar obiciążenia:" Grid.Row="2" />
        <Label Content="ilosc powtorzen:" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="ciezarTextbox" KeyDown="ciezarTextbox_KeyDown"  />
        <ComboBox Grid.Column="1" ItemsSource="{Binding}" Grid.Row="1" x:Name="powtorzeniaCombo" />
        <Button Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Content="Oblicz" x:Name="obliczButton" Click="obliczButton_Click" />
        <Label Content="wyniki:" Grid.Row="4"/>
        <Label Content="{Binding}" Grid.Row="4" Grid.Column="1" Name="label_wynik" />
    </Grid>
</Window>
