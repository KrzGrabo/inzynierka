<Window x:Class="Aplikacja.Porownanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Porownanie" Icon="Ikonki\ikona.png" Height="400" Width="400" FontSize="14" WindowStartupLocation="CenterScreen">
    <ScrollViewer>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1"  MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3"/>
                    <GradientStop Color="#FF7DCFE8" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel Margin="5">
                <TextBlock TextWrapping="WrapWithOverflow" Margin="5" Text="Co wybrać jako źródło energii w diecie- tłuszcze czy węglowodany?" FontSize="18"/>
                <TextBlock x:Name="opisLabel" TextWrapping="WrapWithOverflow" Text="{Binding}"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Window>
